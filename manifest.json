{
  "manifest_version": 3,
  "name": "Perpetualpulse Trading Extension",
  "version": "1.3",
  "description": "Additional metrics for trading dashboard on Lighter.xyz",
  "permissions": ["storage"],
  "host_permissions": ["https://app.lighter.xyz/trade/*"],
  "content_scripts": [
    {
      "matches": ["https://app.lighter.xyz/trade/*"],
      "js": [
        "content.js",
        "hotkeys.js",
        "volatility.js"
      ],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png",
    "512": "icon-512.png"
  }
}